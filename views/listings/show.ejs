<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card">
    <% if (listing.image && listing.image.url) { %>
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <% } else { %>
    <div
      class="card-img-top show-img d-flex align-items-center justify-content-center"
      style="height: 200px"
    >
      <small>No image available</small>
    </div>
    <% } %>
    <div class="card-body">
      <p class="card-text">
        <i>Owned by:- <%= listing.owner.username %> </i>
        <br />
      </p>
      <p class="card-text"></p>
      <%= listing.description %> <br />
      <p class="card-text">
        &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A"
        %> <br />
      </p>
      <p class="card-text"><%= listing.location %> <br /></p>
      <p class="card-text"><%= listing.country %> <br /></p>
    </div>
  </div>
  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns mt-3">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn"
      >Edit</a
    >
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=DELETE"
      style="display: inline-block"
    >
      <button class="btn btn-dark offset-5 delete-btn">Delete</button>
    </form>
  </div>
  <hr />
  <% } %> <% if(currUser){%>
  <div class="col-8 offset-3 mb-3">
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <!-- <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div> -->
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please submit comments for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
  <%}%>
  <div class="col-10 offset-1 mt-4">
    <h4>Reviews :</h4>
    <% if (listing.reviews && listing.reviews.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% listing.reviews.forEach(function(review) { %>
      <div class="col">
        <div class="card shadow-sm border-0 p-3 mb-3 bg-light">
          <div class="card-header bg-dark text-white">
            <p
              class="starability-result"
              data-rating="<%= review.rating %>"
            ></p>
          </div>
          <div class="card-body">
            <p class="card-text"><%= review.comment %></p>
            <hr />
            <p class="text-muted mb-1">
              <small>
                Posted by:
                <span class="fw-bold">
                  <% if (review.author) { %> <%= review.author.username %> <% }
                  else { %> (Deleted User) <% } %>
                </span>
              </small>
            </p>
            <small class="text-secondary"
              >On <%= review.createdAt.toLocaleString() %></small
            >
          </div>
        </div>
        <form
          method="POST"
          action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE"
          class="mb-3"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% }) %>
    </div>
    <% } else { %>
    <i>No reviews yet.</i>
    <% } %>
  </div>
</div>
